
<table> 
    <tr>
      <td><%= f.label "Tipo de Cliente:" %></td>
      <td><label for="cpf">CPF: </label></td>
      <td><label for="cnpj">CNPJ: </label></td>
    </tr>

    <tr>
      <td><%= f.select :tipo_cliente,[['Pessoa Física','F'],['Pessoa Jurídica','J']] %></td  >
      <td><%= f.text_field :cpf, :onkeypress => 'mascara(this, cpf_cnpj)', :size => 14, :maxlength => 14 %></td>        
      <td><%= f.text_field :cnpj, :onkeypress => 'mascara(this, cpf_cnpj)', :size => 18, :maxlength => 18  %></td>
    </tr>
    <tr>
      <td><label for="razao_social">Razão Social: </label></td>
      <td><label for= "nome_fantasia">Nome do Cliente: </label></td>
      <td><label for="documento">RG / Inscrição Estadual</label></td>
    </tr>
    <tr>
      <td><%= f.text_field :razao_social %></td>
      <td><%= f.text_field :nome_fantasia %></td>
      <td><%= f.text_field :documento %> </td>
    </tr>
 <table>
    <tr>
      <td><%= f.label :endereco %></td>
      <td><%= f.label :Bairro %></td>
      <td><%= f.label :complemento %></td>
    </tr>
    <tr>
      <td><%= f.text_field :endereco %></td>
      <td><%= f.text_field :bairro %></td>
      <td><%= f.text_field :complemento %></td>
    </tr>
</table>
<table>
    <tr>
      <td><%= f.label :referencia %></td>
      <td><%= f.label :cep %></td>
      <td><%= f.label "Estado / Cidade:" %></td>            
    </tr>
    <tr>
      <td><%= f.text_field :referencia %></td>
      <td><%= f.text_field :cep, :onkeypress => 'mascara(this, cep)', :size => 14 %></td>
      <td><%= f.select :uf, Uf.find(:all).collect { |p| [ p.descricao, p.uf ] }, :include_blank => true %>
              <div id="div_cidade">
                <% if !@cliente.cidade.nil? then %>
                  <%=  select_tag('cliente[cidade_id]', "<option>#{@cliente.cidade.descricao}</option>", :disabled => true) %>
                <% end %>
              </div>
      </td>
    </tr>
 </table>
 <table>
    <tr>
      <td><%= f.label :fone_pessoal %></td>
      <td><%= f.label :fone_comercial %></td>
      <td><%= f.label :fone_celular %></td>
      <td><%= f.label :email %></td>
    </tr>
    <tr>
      <td><%= f.text_field :fone_pessoal, :onkeypress => 'mascara(this, telefone)', :size => 12 %></td>
      <td><%= f.text_field :fone_comercial, :onkeypress => 'mascara(this, telefone)', :size => 12 %></td>
      <td><%= f.text_field :fone_celular, :onkeypress => 'mascara(this, telefone)', :size => 12  %></td>
      <td><%= f.text_field :email, :onkeypress => 'mascara(this, email)'  %></td>
    </tr>
<table>
<table>
    <tr>
      <td><%= f.label :endereco_entrega %></td>
      <td><%= f.label :regiao_entrega_id %></td>
      <td><%= f.label :cidade_entrega_id %></td>
      <td><%= f.label :area_id %></td>
    </tr>
    <tr>
      <td><%= f.text_field :endereco_entrega %></td>
      <td><%= f.text_field :regiao_entrega_id %></td>
      <td><%= f.select :uf, Uf.find(:all).collect { |p| [ p.descricao, p.uf ] }, :include_blank => true %>
              <div id="div_cidade">
                <% if !@cliente.cidade.nil? then %>
                  <%=  select_tag('cliente[cidade_id]', "<option>#{@cliente.cidade.descricao}</option>", :disabled => true) %>
                <% end %>
              </div></td>
      <td><%= f.text_field :area_id %></td>
    </tr>
</table>
<table> 
    <tr>      
      <td><%= f.label :referencias_bancaria %></td>
      <td><%= f.label :referencias_comerciais %></td>
    </tr>
    <tr>
      <td><%= f.text_area :observacao %></td>
      <td><%= f.text_area :info_serasa %></td>
    </tr>
    <tr>
      <td><%= f.label :observacao %></td>
      <td><%= f.label :info_serasa %></td>
    </tr>
    <tr>
      <td><%= f.text_area :referencias_bancaria %></td>
      <td><%= f.text_area :referencias_comerciais %></td>
</table>
<table>
    <tr>
      <td><%= f.label :data_nascimento %></td>
      <td><%= f.label :nome_comprador %></td>
      <td><%= f.label :vendas_suspensas %></td>
    </tr>
    <tr>
      <td><%= f.calendar_date_select :data_nascimento %></td>
      <td><%= f.text_field :nome_comprador %><td>
      <td><%= f.select :vendas_suspensas,[['Sim',true],['Não',false]] %></td>
    </tr>      
</table> 
<table>     
    <tr>
      <td><%= f.label :observacao_suspensao_venda %></td>
      
    </tr>
    <tr>
      <td><%= f.text_area :observacao_suspensao_venda %> </td>
      
    </tr>
</table>  
<table>
    <tr>
      <td><%= f.label :limite_credito %></td>
      <td><%= f.label :status %></td>
      <td><label for="prazo_medio_maximo">Prazo Médio:</label></td>
      <td><%= f.label :data_inclusao_prazo_medio %></td>
   
    </tr>
    <tr>
      <td><%= f.text_field :limite_credito, :onkeypress => 'mascara(this, valor)' %></td>
      <td><%= f.select :status,[['ATIVO','A'],['INATIVO','I']] %></td>
      <td><%= f.text_field :prazo_medio_maximo %></td>
      <td><%= f.calendar_date_select :data_inclusao_prazo_medio %><%= observe_field 'cliente_uf',
            :update => 'div_cidade',
            :url => {:action => 'cidade'},
            :with => :uf %>
      </td>
      
    </tr>
</table>

        
    

        
                    

      
